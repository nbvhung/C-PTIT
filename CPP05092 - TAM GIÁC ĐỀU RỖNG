#include<bits/stdc++.h>
using namespace std;
using ll = long long;

int main(){
    int n; cin>>n;
    for(int i=1; i<=n; i++){
        for(int j=1; j<=n-i; j++){
            cout<<" ";
        }
        for(int j=1; j<=i; j++){
            if(j==1 || j==i || i==n)
                cout<<"*";
            else cout<<" ";
            if(j<i) cout<<" ";  
        }
        cout<<endl;
    }
}
