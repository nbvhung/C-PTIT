#include <bits/stdc++.h>
using namespace std;
using ll = long long;


string chuanhoa(string &s){
    s[0] = toupper(s[0]);
    for(int i=1; i<s.size(); i++){
        s[i] = tolower(s[i]);
    }
    return s;
}

string viethoa(string &s){
    for(int i=1; i<s.size(); i++){
        s[i] = toupper(s[i]);
    }
    return s;
}

int main() {
    string s; getline(cin,s);
    stringstream ss(s);
    string tmp;
    vector<string> v;
    while(ss>>tmp){
        v.push_back(chuanhoa(tmp));
    }
    for(int i=0; i<v.size()-1; i++){
        if(i!=v.size()-2) cout<<v[i]<<" ";
        else cout<<v[i];
    }
    cout<<", "<<viethoa(v[v.size()-1]);
}
