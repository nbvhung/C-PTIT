#include <bits/stdc++.h>
using namespace std;
using ll = long long;

string lower(string &s){
    for(int i=0; i<s.size(); i++){
        s[i] = tolower(s[i]);
    }
    return s;
}

int main() {
    string s; getline(cin,s);
    stringstream ss(s);
    string tmp;
    vector<string> v;
    while(ss>>tmp){
        v.push_back(lower(tmp));
    }
    cout<<v[v.size()-1];
    for(int i=0; i<v.size()-1; i++){
        cout<<v[i][0];
    }
    cout<<"@ptit.edu.vn";
}
