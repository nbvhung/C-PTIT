#include <bits/stdc++.h>
using namespace std;
using ll = long long;


int main() {
	int t; cin >> t;
	while (t--) {
        int ok=0;
		int a,m; cin>>a>>m;
        for(int i=0; i<m; i++){
            if(a*i%m == 1){
                ok=1;
                cout<<i<<endl;
                break;
            }
        }
        if(!ok) cout<<-1<<endl;
	}
}
