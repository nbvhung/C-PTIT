#include <bits/stdc++.h>
using namespace std;
using ll = long long;

int main(){
    int t; cin>>t;
    while(t--){
        int n,k; cin>>n>>k;
        int a[n];
        int ok=0;
        for(int &x : a) cin>>x;
        for(int i=0; i<n; i++){
            if(a[i] == k){
                cout<<i+1<<endl;
                ok=1;
                break;
            }
        }
        if(!ok) cout<<-1<<endl;
    }
}
